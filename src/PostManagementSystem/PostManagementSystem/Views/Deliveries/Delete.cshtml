@model PostManagementSystem.Models.Delivery

@{
    ViewData["Title"] = "Delete";
}

<div class="index-list-bg">
    <div class="page-title-frame">
        <h1>Delete</h1>
    </div>
    <br />

    <h3>Are you sure you want to delete this?</h3>
    <br />

    <div>
        <h4>Delivery</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeliveryID)
            </dd>
            <dt class="col-sm-2">
                Created Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                Expected Delivery Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExpectedDeliveryDate)
            </dd>
            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status.Name)
            </dd>
            <dt class="col-sm-2">
                From
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SenderPostOffice.Address.FullAddress)
            </dd>
            <dt class="col-sm-2">
                To
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReceiverPostOffice.Address.FullAddress)
            </dd>

        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="DeliveryID" />
            <input type="submit" class="btn btn-primary create-button" value="Delete" />
        </form>

        <br />
        <div>
            <form asp-action="Index" asp-controller="Deliveries" method="get" style="display:inline;">
                <button type="submit" class="btn btn-primary create-button" id="createButton" data-some-attribute="value">Back to List</button>
            </form>

        </div>
</div>

</div>
