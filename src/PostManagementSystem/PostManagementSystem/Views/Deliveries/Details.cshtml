@model PostManagementSystem.ViewModels.CreateDeliveryViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="page-title-frame">
    <h1>@ViewData["Title"]</h1>
</div>
<br />

<div class="index-list-bg">

    <div>

        <h4>Sender Data</h4>
        <hr />
        <dl class="row">
            <dt style="font-size: 16px;" class="col-sm-2">
                Name:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.Sender.Name)
            </dd>
            <dt style="font-size: 16px;" class="col-sm-2">
               Surname:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.Sender.Surname)
            </dd>
            <dt style="font-size: 16px;" class="col-sm-2">
                Phone:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.Sender.Phone)
            </dd>
        </dl>
        <br />

        <h4>Receiver Data</h4>
        <hr />
        <dl class="row">
            <dt style="font-size: 16px;" class="col-sm-2">
                Name:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.Receiver.Name)
            </dd>
            <dt style="font-size: 16px;" class="col-sm-2">
                Surname:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.Receiver.Surname)
            </dd>
            <dt style="font-size: 16px;" class="col-sm-2">
                Phone:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.Receiver.Phone)
            </dd>
        </dl>
        <br />

        <h4>Package Data</h4>
        <hr />
        <dl class="row">
            <dt style="font-size: 16px;" class="col-sm-2">
                Package Size:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.PackageType.Name)
            </dd>
            <dt style="font-size: 16px;" class="col-sm-2">

            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @if (Model.PackageType.Image != null)
                {
                    <img src="@Url.Action("GetImage", "PackageTypes", new { id = Model.PackageType.PackageTypeID })" alt="Status Image" width="85" height="85" />
                }
                else
                {
                    <p>No image available</p>
                }
            </dd>
            <dt style="font-size: 16px;" class="col-sm-2">
                Maximum Weight:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.PackageType.MaxWeight)
            </dd>
            <dt style="font-size: 16px;" class="col-sm-2">
                Maximum Dimensions:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.PackageType.MaxDimensions)
            </dd>
            <dt style="font-size: 16px;" class="col-sm-2">
                Cost:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @Html.DisplayFor(model => model.PackageType.Cost)
            </dd>
            <dt style="font-size: 16px;" class="col-sm-2">
                Fragile:
            </dt>
            <dd style="font-size: 18px;" class="col-sm-10">
                @if (Model.PackageType.IsFragile == true)
                {
                    <p>Yes</p>
                }
                else
                {
                    <p>No</p>
                }
            </dd>

        </dl>

        <br />

        <form asp-action="Index" asp-controller="Deliveries" method="post" style="display:inline;">
            <button type="submit" class="btn btn-primary create-button" id="createButton" data-some-attribute="value">OK</button>
        </form>
    </div>
</div>
