@model PostManagementSystem.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<div class="index-list-bg">
    <div class="page-title-frame">
        <h1>Edit</h1>
    </div>
    <br />

    <h4>Customer</h4>
    <br />

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <br />

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" class="btn btn-primary create-button" value="Save" />
                </form>
            </form>
        </div>
    </div>

    <br />
    <form asp-action="Index" asp-controller="Customers" method="get" style="display:inline;">
        <button type="submit" class="btn btn-primary create-button" id="createButton" data-some-attribute="value">Back to List</button>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
