<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PostManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PostManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light footer-bg border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Pack Tracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark bold" asp-area="" asp-controller="Deliveries" asp-action="Index">Deliveries</a>
@*                             <a asp-area="" asp-controller="Deliveries" asp-action="Index">
                                <button type="submit" class="btn btn-primary create-button" id="AddressIndex" data-some-attribute="value">Deliveries</button>
                            </a> *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark bold" asp-area="" asp-controller="PostOffices" asp-action="Index">Post Offices</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark bold" asp-area="" asp-controller="Cities" asp-action="Index">Cities</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark bold" asp-area="" asp-controller="Addresses" asp-action="Index">Addresses</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark bold" asp-area="" asp-controller="PackageTypes" asp-action="Index">Packaging</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark bold" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark bold" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container footer-bg">
            &copy; 2024 - Pack Tracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>