@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark bold form-inline nav-bar-font" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
        <li>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button style="color:white;" type="submit" class="nav-link btn btn-link btn-primary logout-button nav-bar-font">Logout</button>
            </form>
        </li>
}
else
{
    <li class="nav-item">
            <form class="nav-link text-dark nav-bar-font" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button style="color:white;" type="submit" class="nav-link btn btn-link btn-primary logout-button nav-bar-font">Login</button>
            </form>
    </li>
}
</ul>
