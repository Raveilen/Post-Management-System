@model PostManagementSystem.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="index-list-bg">
    <div class="page-title-frame">
        <h1>Edit</h1>
    </div>
    <br />


    <h4>User</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Role" class="control-label"></label>
                    <select asp-for="Role" class="form-control" asp-items="ViewBag.Role"></select>
                </div>


                <br />
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" class="btn btn-primary create-button" value="Save" />
                </form>
            </form>
        </div>
    </div>

    <br />
    <form asp-action="Index" asp-controller="Users" method="get" style="display:inline;">
        <button type="submit" class="btn btn-primary create-button" id="createButton" data-some-attribute="value">Back to List</button>
    </form>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
