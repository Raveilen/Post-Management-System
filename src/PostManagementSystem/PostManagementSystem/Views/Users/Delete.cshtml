@model PostManagementSystem.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
}

<div class="page-title-frame">
    <h1>Delete</h1>
</div>
<br />

<div class="index-list-bg">



    <h3>Are you sure you want to delete this?</h3>
    <br />

    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                E-mail
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Role
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Role.Name)
            </dd>
        </dl>
        <br />

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" class="btn btn-primary create-button" value="Delete" />
        </form>

        <br />
        <div>
            <form asp-action="Index" asp-controller="Users" method="get" style="display:inline;">
                <button type="submit" class="btn btn-primary create-button" id="createButton" data-some-attribute="value">Back to List</button>
            </form>

        </div>
    </div>
