@model PostManagementSystem.ViewModels.PackageTypeViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="page-title-frame">
    <h1>Create</h1>
</div>
<br />

<div class="index-list-bg">

    <h4>PackageType</h4>
    <br />

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Size</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxWeight" class="control-label">Max Weight</label>
                    <input asp-for="MaxWeight" class="form-control" />
                    <span asp-validation-for="MaxWeight" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxDimensions" class="control-label">Max Dimensions</label>
                    <input asp-for="MaxDimensions" class="form-control" />
                    <span asp-validation-for="MaxDimensions" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsFragile" /> Fragile
                    </label>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="Cost" class="control-label"></label>
                    <input asp-for="Cost" class="form-control" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>

                <br />

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary create-button" />
                </div>
            </form>
        </div>
    </div>
    <br />

    <div>
        <form asp-action="Index" asp-controller="PackageTypes" method="get" style="display:inline;">
            <button type="submit" class="btn btn-primary create-button" id="createButton" data-some-attribute="value">Back to List</button>
        </form>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
